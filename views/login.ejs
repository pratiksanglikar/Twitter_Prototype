<html xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <title> <%= title %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css"/>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular-route.js"></script>
    <script src="/javascripts/app.js"></script>
</head>
<body data-ng-app="Twitter" data-ng-controller="UserController">
<div class="container">
    <div id="top_header_div" class="twitter-header">
        <div class="container">
            <div class="col-md-10">

            </div>
            <div class="col-md-2">
                <button class="header-buttons" ng-click="redirectHome()">Sign Up</button>
            </div>
        </div>
        <div class="container">
            <div class="col-md-8 col-md-offset-2">
                <h2>
                    See whatâ€™s happening right now.
                </h2>
                <p>
                    Find community, conversation and inspiration about the things you love.
                </p>
            </div>
        </div>
    </div>
</div>
<div id="main_content" class="container twitter-main-content-div">
    <div class="col-md-4 col-md-offset-4 login-div">
        <h3>Login to your Twitter account!</h3>
        <form class="simple-form" name="loginform">
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <input
                            type="text"
                            ng-model="twitterHandle"
                            placeholder="Twitter Handle"
                            name="twitterHandle"
                            class="form-control"
                            required>
                    </input>
                </div>
                <div class="col-md-10 col-md-offset-1"
                     ng-show="loginform.$submitted || loginform.twitterHandle.$touched">
                    <div ng-show="loginform.twitterHandle.$error.required">
                        <span class="login-error">Twitter handle required.</span>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <input
                            type="password"
                            ng-model="password"
                            name="password"
                            placeholder="Password"
                            class="form-control"
                            required>
                    </input>
                </div>
                <div class="col-md-10 col-md-offset-1"
                     ng-show="loginform.$submitted || loginform.password.$touched">
                    <div ng-show="loginform.password.$error.required">
                        <span class="login-error">Password required.</span>
                    </div>
                </div>
            </div>
            <br>
            <div class="login-button-div">
                <button
                        class="btn btn-primary login-button"
                        ng-click="login()">
                    Login
                </button>
            </div>

            <div ng-show="invalidPassword" class="login-error">
                <span class="login-error"> {{loginError}} </span>
            </div>
        </form>
    </div>
</div>
</body>
</html>